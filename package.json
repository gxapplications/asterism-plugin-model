{
  "name": "asterism-plugin-template",
  "version": "0.1.3",
  "description": "Base template to build a plugin for asterism",
  "author": "Xavier Gouley <gxapplications@gmail.com>",
  "contributors": [],
  "license": "CC-BY-NC-SA-4.0",
  "scripts": {
    "dist": "rimraf dist && babel lib --out-dir dist",
    "wrap:install": "cd ../asterism/ && npm install --no-save file:../asterism-plugin-template",
    "wrap:clean": "cd ../asterism/ && rimraf node_modules/asterism-plugin-template/dist",
    "wrap:link": "cd ../asterism/ && ln -s ../../../asterism-plugin-template/dist/ node_modules/asterism-plugin-template/dist",
    "wrap": "npm run dist && npm run wrap:install && npm run wrap:clean && npm run wrap:link",
    "start": "cd ../asterism/ && cross-env ASTERISM_PLUGINS=asterism-plugin-template npm start",
    "start:debug": "cd ../asterism/ && cross-env ASTERISM_PLUGINS=asterism-plugin-template npm run start:debug",
    "prepublishOnly": "npm run dist",
    "validate": "npm ls"
  },
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/gxapplications/asterism-plugin-template"
  },
  "bugs": {
    "url": "https://github.com/gxapplications/asterism/issues"
  },
  "homepage": "https://github.com/gxapplications/asterism-plugin-template",
  "keywords": [
    "gridifier",
    "react",
    "material",
    "asterism",
    "domotics"
  ],
  "engines": {
    "node": ">= 7.0.0",
    "npm": ">= 3.10.8"
  },
  "babel": {
    "presets": [
      "node7",
      "es2017-node7/webpack2",
      "react-es2015"
    ],
    "env": {
      "development": {
        "plugins": [
          [
            "css-modules-transform",
            {
              "preprocessCss": "./babel-sass-preprocess.js",
              "generateScopedName": "[local]",
              "extractCss": "./dist/styles.css",
              "extensions": [
                ".css",
                ".sass",
                ".scss"
              ]
            }
          ]
        ]
      }
    }
  },
  "dependencies": {

  },
  "devDependencies": {
    "asterism-plugin-library": ">= 1.0.3",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.4.5",
    "babel-plugin-css-modules-transform": "^1.2.7",
    "babel-preset-es2017-node7": "^0.5.2",
    "babel-preset-node7": "^1.5.0",
    "babel-preset-react-es2015": "^1.3.0",
    "cross-env": "^1.0.7",
    "express": "4.16.x",
    "node-sass": "^4.5.3",
    "prop-types": "15.6.x",
    "react": "15.6.x",
    "react-materialize": "^1.0.10",
    "rimraf": "^2.5.2"
  },
  "peerDependencies": {
    "asterism": ">= 0.4.4",
    "asterism-plugin-library": ">= 1.0.3",
    "express": "4.16.x",
    "prop-types": "15.6.x",
    "react": "15.6.x",
    "react-materialize": "^1.0.10"
  },
  "directories": {
    "lib": "./lib",
    "dist": "./dist"
  },
  "config": {}
}
